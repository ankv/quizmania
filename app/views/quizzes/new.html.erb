<h1 class="center">Create Quiz <%= @quiz.id %> </h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= form_for @quiz do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %><br><br>

      <%= f.fields_for :questions do |ques| %>
        <%= ques.label :statement %>
        <%= ques.text_field :statement, class: "form-control" %>

        <div class="row">
        <div class="col-md-2 col-md-offset-1">
        <%= ques.fields_for :choices do |choi| %>
          <%= choi.label :choice %>
          <%= choi.text_field :statement, class: "form-control" %>
        <% end %>
      </div>
      </div>

      <% end %>

      <div class="center">
      <br><br><%= f.submit "Create", class: "btn btn-primary" %><br><br><br>
      </div>

    <% end %>
  </div>
</div>
