<h1 class="center">Edit Quiz <%= @quiz.id %> </h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= form_for @quiz do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %><br><br>

      <%= f.fields_for :questions do |ques| %>
        <%= ques.label :statement %>
        <%= ques.text_field :statement, class: "form-control" %>

        <% val = 0 %>
        <div class="row">
        <div class="col-md-3 col-md-offset-1">
        <%= ques.fields_for :choices do |choi| %>
          <%= choi.label :choice %>
          <div class="row">
            <div class="col-md-1">
              <%= ques.radio_button :correct_choice_id, val%>
              <% val += 1 %>
            </div>
            <div class="col-md-10">
              <%= choi.text_field :statement, class: "form-control" %>
            </div>
          </div>
        <% end %>
      </div>
      </div>
      <% end %>
      <div class="center">
      <br><br><%= f.submit "Update", class: "btn btn-primary" %><br><br><br>
      </div>
    <% end %>
  </div>
</div>
